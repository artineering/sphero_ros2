{
  "name": "Simple Demo State Machine",
  "initial_state": "idle",
  "states": [
    {
      "name": "idle",
      "description": "Robot is idle with blue LED",
      "entry_condition": {
        "type": "timer",
        "params": {
          "duration": 3.0
        }
      },
      "tasks": [
        {
          "type": "set_led",
          "params": {
            "color": "blue",
            "led": "main"
          }
        }
      ]
    },
    {
      "name": "moving",
      "description": "Robot moves with green LED and shows smile",
      "entry_condition": {
        "type": "timer",
        "params": {
          "duration": 3.0
        }
      },
      "tasks": [
        {
          "type": "set_led",
          "params": {
            "color": "green",
            "led": "main"
          }
        },
        {
          "type": "roll",
          "params": {
            "heading": 0,
            "speed": 80,
            "duration": 2.0
          }
        },
        {
          "type": "matrix",
          "params": {
            "pattern": "smile",
            "red": 0,
            "green": 255,
            "blue": 0
          }
        }
      ]
    }
  ],
  "transitions": [
    {
      "source": "idle",
      "destination": "moving",
      "trigger": "auto"
    },
    {
      "source": "moving",
      "destination": "idle",
      "trigger": "auto"
    }
  ]
}
